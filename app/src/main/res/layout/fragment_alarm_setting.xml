<?xml version="1.0" encoding="utf-8"?>
<!--    xmlns:app="http://schemas.android.com/apk/res-auto"-->
<!--    xmlns:tools="http://schemas.android.com/tools"-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:textAlignment="center"
    android:id="@+id/alarmFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorLightMint"
        android:padding="5dp"
        android:paddingLeft="50dp"
        android:text="알람설정" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:timePickerMode="spinner" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/toggle_sun"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/togglebtn_color"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textOff="일"
            android:textOn="일" />

        <ToggleButton
            android:id="@+id/toggle_mon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/togglebtn_color"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textOff="월"
            android:textOn="월" />

        <ToggleButton
            android:id="@+id/toggle_tue"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/togglebtn_color"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textOff="화"
            android:textOn="화" />

        <ToggleButton
            android:id="@+id/toggle_wed"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/togglebtn_color"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textOff="수"
            android:textOn="수" />

        <ToggleButton
            android:id="@+id/toggle_thu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/togglebtn_color"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textOff="목"
            android:textOn="목" />

        <ToggleButton
            android:id="@+id/toggle_fri"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/togglebtn_color"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textOff="금"
            android:textOn="금" />

        <ToggleButton
            android:id="@+id/toggle_sat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/togglebtn_color"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textOff="토"
            android:textOn="토" />
    </LinearLayout>


    <!--    침대각도저장-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/roundborder"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/bed_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:text="침대"
            android:textSize="7pt" />

        <ToggleButton
            android:id="@+id/bedHopeDegree0"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_selector"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textOff="0"
            android:textOn="0" />
        <ToggleButton
            android:id="@+id/bedHopeDegree45"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_selector"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textOff="45"
            android:textOn="45" />
        <ToggleButton
            android:id="@+id/bedHopeDegree90"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_selector"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textOff="90"
            android:textOn="90" />

    </LinearLayout>

<!--        조명저장바-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/roundborder"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/light_on" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:text="조명"
                        android:textSize="7pt" />
                    <TextView
                        android:id="@+id/lightPower"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="ID:lightpower"/>
            </LinearLayout>
            <SeekBar
                android:id="@+id/hope_light_seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:max="100"
                android:min="0"
                android:progress="70"
                android:progressDrawable="@drawable/seekbardesign"
                android:thumb="@drawable/seekbarthumb" />
        </LinearLayout>

        <!--블라인드-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/roundborder"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/blind"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:text="블라인드"
                android:textSize="7pt" />

            <ToggleButton
                android:id="@+id/blindHopeOPEN"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_selector"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textOff="OPEN"
                android:textOn="OPEN" />
            <ToggleButton
                android:id="@+id/blindHopeCLOSE"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_selector"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textOff="CLOSE"
                android:textOn="CLOSE" />

        </LinearLayout>

    <Button
        android:id="@+id/sendToServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:background="@drawable/buttondesign"
        android:text="저장" />
</LinearLayout>
</ScrollView>

