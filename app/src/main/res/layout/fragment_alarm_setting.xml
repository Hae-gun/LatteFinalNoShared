<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:textAlignment="center"
    android:id="@+id/alarmFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorLightMint"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알람설정"
            />


    </LinearLayout>

        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/toggle_sun"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/togglebtn_color"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textOff="일"
                android:textOn="일" />

            <ToggleButton
                android:id="@+id/toggle_mon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/togglebtn_color"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textOff="월"
                android:textOn="월" />

            <ToggleButton
                android:id="@+id/toggle_tue"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/togglebtn_color"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textOff="화"
                android:textOn="화" />

            <ToggleButton
                android:id="@+id/toggle_wed"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/togglebtn_color"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textOff="수"
                android:textOn="수" />

            <ToggleButton
                android:id="@+id/toggle_thu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/togglebtn_color"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textOff="목"
                android:textOn="목" />

            <ToggleButton
                android:id="@+id/toggle_fri"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/togglebtn_color"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textOff="금"
                android:textOn="금" />

            <ToggleButton
                android:id="@+id/toggle_sat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/togglebtn_color"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textOff="토"
                android:textOn="토" />
        </LinearLayout>

<!--        조명조절바-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/roundborder"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/light_on" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:text="조명"
                android:textSize="7pt" />

            <SeekBar
                android:id="@+id/hope_light_seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:max="100"
                android:min="0"
                android:progress="70"
                android:progressDrawable="@drawable/seekbardesign"
                android:thumb="@drawable/seekbarthumb" />
        </LinearLayout>


        <!--    침대각도조절-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/roundborder"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/bed_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:text="침대"
                android:textSize="7pt" />

            <Button
                android:id="@+id/bedHopeDegree0"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="@color/colorBeige"
                android:text="0°" />

            <Button
                android:id="@+id/bedHopeDegree45"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="@color/colorBeige"
                android:text="45°" />

            <Button
                android:id="@+id/bedHopeDegree90"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="@color/colorBeige"
                android:text="90°" />
        </LinearLayout>

        <!--블라인드-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/roundborder"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/blind" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:text="블라인드"
                android:textSize="7pt" />

            <Button
                android:id="@+id/blindHopeOPEN"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:background="@color/colorBeige"
                android:text="OPEN" />

            <Button
                android:id="@+id/blindHopeCLOSE"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/colorBeige"
                android:text="CLOSE" />
        </LinearLayout>

        <Button
            android:id="@+id/sendToServer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttondesign"
            android:text="저장" />



</LinearLayout>
</ScrollView>